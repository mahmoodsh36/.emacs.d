#!/bin/sh
while read file
do
    case "$1" in
        "w")
            hsetroot -fill "$file" && wal -i "$file" && cp "$file" ~/.cache/wallpaper
            ;;
        "a")
            mv "$file" ~/pictures/ignore
            ;;
        "d")
            rm "$file"
            ;;
        "s")
            mv "$file" ~/pictures
            ;;
        "r")
            mv "$file" `echo $file | dmenu -it "$file"`
            ;;
        "y")
            echo "$file" | xclip -selection c
            ;;
    esac
done
