#!/bin/sh
while read file
do
    echo "$@" > ~/test
    case "$1" in
        "x")
            image_index=$(expr `ls ~/media/images/girls/ | cut -d "e" -f2 | sort -n | tail -1` + 1)
            mv "$file" "/home/$USER/media/images/girls/image$image_index"
            ;;
        "y")
            echo $file | tr -d "\n" | xclip -selection c
            notify-send "$file"
            ;;
        "w")
            #hsetroot -fill "$file"
            wal -i "$file"
            cp "$file" ~/.cache/wallpaper
            /usr/bin/pywal_awesome_colors.sh
            /usr/bin/dunst_pywal.sh
            ;;
        "a")
            mv "$file" ~/media/images/ignore
            ;;
        "d")
            rm "$file"
            ;;
        "s")
            mv "$file" ~/media/images
            ;;
        "r")
            mv "$file" `echo $file | dmenu -it "$file"`
            ;;
        "y")
            echo "$file" | xclip -selection c
            ;;
    esac
done
