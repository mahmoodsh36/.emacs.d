XF86Audio{Prev,Next,Play}
    playerctl {previous,next,play-pause}

XF86Audio{RaiseVolume,LowerVolume,Mute}
    pactl set-sink-volume @DEFAULT_SINK@ {+3%, -3%, 0}

super + Return
    st

super + x ; {e,w,s,j,k,r,i,p}
    {notify-send "launched emacs" && emacs, \
    firefox & notify-send "launched Firefox", \
    notify-send "launched Spotify ðŸŽ¶ðŸŽµ" && spotify, \
    dmenu_select_emoji.sh, \
    dmenu_kill_process.sh, \
    st -e zsh -i -c ranger & notify-send 'launched ranger', \
    sxiv -a "$(echo -e "$(find ~/media/images -type d -mindepth 1)\n/home/$USER/downloads" | grep -v ".git" | dmenu -l 10 -p "wallpaper directory")", \
    st -e zsh -i -c ncpamixer & notify-send 'launched ncpamixer'}

super + x ; {n,I,v,d,m,f}
    {st -e zsh -i -c newsboat & notify-send 'launched newsboat', \
    notify-send  -t 60000 "$(xprop | tail -40)", \
    st -e zsh -i -c vim & notify-send 'launched vim', \
    notify-send 'launched diary' && st -e zsh -i -c diary.sh, \
    notify-send "launched PopcornTime" && popcorntime || Popcorn-Time, \
    fetch_reddit_images.sh}

super + e
    toggle_touchpad.sh

super + r
    dmenu_run.sh

super + y ; super + y ; {i}
    notify-send "it works"

# screenshot
super + p
    file=$(echo ~/media/images/scrots/`date | tr " " "_"`) && \
    scrot "$file" && echo -n "$file" | xclip -selection c && notify-send "screenshot taken"
# delayed screenshot
super + shift + p
    delayed_scrot.sh

super + s ; {u, p, l, L}
    {fetch_lib_tracks.py, \
    dmenu_play_track.py, \
    lyrics.sh 0, \
    lyrics.sh}

super + g ; {R,r,s}
    {ffmpeg -video_size 3286x1080 -framerate 25 -f x11grab -i :0.0 -f pulse -ac 2 -i default "/home/$USER/recording_$(date | tr " " "_").mkv" & notify-send "started recording", \
    ffmpeg -video_size 1366x768 -framerate 25 -f x11grab -i :0.0 -f pulse -ac 2 -i default "/home/$USER/recording_$(date | tr " " "_").mkv" & notify-send "started recording", \
    pkill ffmpeg && notify-send "stopped recording"}

super + a ; {s,w,c,n,d}
    {kill -s USR1 `pgrep sxhkd` && notify-send "restarted sxhkd", \
    feh --bg-scale ~/.cache/wallpaper && notify-send "reset wallpaper", \
    pkill compton; compton & notify-send "restarted compton", \
    notify-send 'restarted NetworkManager'; sudo sv restart NetworkManager, \
    pkill dwm_statusbar.s && notify-send "restarted statusbar" && dwm_statusbar.sh}

super + ctrl + space
    notify-send "switched layout to $(switch_layout.sh)"
