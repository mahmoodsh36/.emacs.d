XF86Audio{Prev,Next,Play}
    playerctl {previous,next,play-pause}

XF86Audio{RaiseVolume,LowerVolume,Mute}
    amixer set Speaker -c 1 {2%+, 2%-, 0}

super + Return
    st

super + o ; {e,w,s,j,k,r,i}
    {emacs & notify-send -t 5000 "System" "launched Emacs", \
    firefox & notify-send -t 5000 "System" "launched Firefox", \
    spotify & notify-send -t 5000 "System" "launched Spotify", \
    dmenu_select_emoji.sh, \
    dmenu_kill_process.sh, \
    st -e ranger, \
    sxiv `find ~/pictures -type d | grep -v ".git" | dmenu -l 10 -p "wallpaper directory"`}

super + e
    toggle_touchpad.sh

super + r
    dmenu_run

super + Escape
    pkill sxhkd && sxhkd

super + y ; super + y ; {i}
    notify-send "it works"

super + p
    import -window root ~/screenshot.png && notify-send "screenshot taken"
