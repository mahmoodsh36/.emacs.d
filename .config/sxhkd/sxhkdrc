XF86Audio{Prev,Next,Play}
    playerctl {previous,next,play-pause}

XF86Audio{RaiseVolume,LowerVolume,Mute}
    pactl set-sink-volume @DEFAULT_SINK@ {+3%, -3%, 0}

super + Return
    st

super + o ; {e,w,s,j,k,r,i,I}
    {notify-send "launched emacs" && emacs, \
    chromium & notify-send "$(echo -e "launched Chromium\nHappy browsing üòÅ")", \
    notify-send "launched Spotify üé∂üéµ" && spotify, \
    rofi_select_emoji.sh, \
    rofi_kill_process.sh, \
    st -e ranger, \
    sxiv "$(echo -e "$(find ~/media/ -type d -mindepth 1)\n/home/$USER/downloads" | grep -v ".git" | rofi -dmenu -p "wallpaper directory")"}

super + e
    toggle_touchpad.sh

super + r
    rofi_run.sh

super + y ; super + y ; {i}
    notify-send "it works"

# screenshot
super + p
    file=$(echo ~/media/scrots/`date | tr " " "_"`) && \
    scrot "$file" && echo -n "$file" | xclip -selection c && notify-send "screenshot taken"
# delayed screenshot
super + shift + p
    delayed_scrot.sh

super + s ; {u, p}
    {fetch_lib_tracks.py, \
    rofi_play_track.py}

super + Escape
    kill -s USR1 `pgrep sxhkd`

super + g ; {r,s}
    {ffmpeg -video_size 3286x1080 -framerate 25 -f x11grab -i :0.0 -f pulse -ac 2 -i default "/home/$USER/recording_$(date | tr " " "_").mkv" & notify-send "started recording", \
    pkill ffmpeg && notify-send "stopped recording"}
